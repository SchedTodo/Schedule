// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Schedule {
  id         Int     @id @default(autoincrement())
  uid        String
  type       String // event, todo
  name       String
  rrules     String // ; 分隔
  times      Time[]
  rTimeCode  String
  exTimeCode String
  comment    String
  actionCode String
  done       Boolean  @default(false) // 所有 Time done 才算 done
  records    Record[]
  deleted    Boolean  @default(false)
  created    DateTime @default(now())
  updated    DateTime @updatedAt
}

model Time {
  id         Int      @id @default(autoincrement())
  schedule   Schedule @relation(fields: [scheduleId], references: [id])
  scheduleId Int
  start      DateTime? // UTC, nullable
  end        DateTime
  startMark  String
  endMark    String
  done       Boolean   @default(false)
  deleted    Boolean   @default(false)
  created    DateTime  @default(now())
  updated    DateTime  @updatedAt
}

model Record {
  id         Int      @id @default(autoincrement())
  schedule   Schedule @relation(fields: [scheduleId], references: [id])
  scheduleId Int
  start      DateTime // UTC
  end        DateTime
  deleted    Boolean  @default(false)
  created    DateTime @default(now())
  updated    DateTime @updatedAt
}
